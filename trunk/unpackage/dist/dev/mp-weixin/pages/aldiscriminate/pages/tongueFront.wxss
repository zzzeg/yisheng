
.content{
    width: 100%;
    height: 100%;
    background: url('https://coffer.bainuo.cn/mdt-pub/img_syt_bg.png') no-repeat ;
    background-size: 100% ; 
    text-align: center;
}
.navigation{
    position: relative;
    width: 100%;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -webkit-flex-direction: column;
            flex-direction: column;
}
.titleNav{
    width:152rpx;
    height:56rpx;
    font-size:38rpx;
    font-family:NotoSansCJKsc-Medium,NotoSansCJKsc;
    font-weight:300;
    color:rgba(255,255,255,1);
    line-height:56rpx;
    position: absolute;
    bottom: 12rpx;
    left: calc(50% - 76rpx);
}
.backBtn{
    position: absolute;
    width: 50rpx;
    height: 50rpx;
    bottom: 21rpx;
    left: 12rpx;
}
.titleText{
    margin-top: 20rpx;
    font-size:46rpx;
    font-family:NotoSansCJKsc-Medium,NotoSansCJKsc;
    font-weight:500;
    color:rgba(255,255,255,1);
    line-height:68rpx;
}
.faceImage{
    margin-top: 50rpx;
    width: 387rpx;
    height: 343rpx;
}
.login-btn{
    margin-top: 40rpx;
    height: 80rpx;
    width: calc(100% - 380rpx);
    border-radius: 45rpx;
    color: #FFFFFF;
    font-size: 31rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
            justify-content: center;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    background:-webkit-linear-gradient(217deg,rgba(136,226,150,1) 0%,rgba(3,190,144,1) 100%);
    background:linear-gradient(233deg,rgba(136,226,150,1) 0%,rgba(3,190,144,1) 100%);
    box-shadow:0px 6rpx 31rpx 0px rgba(3,190,144,0.3);
}
.hint{
    margin-top: 30rpx;
    margin-left: 190rpx;
    width: calc(100% - 380rpx);
    color: #FFFFFF;
    text-align: left;
    font-size:26rpx;
    font-family:NotoSansCJKsc-Regular,NotoSansCJKsc;
    font-weight:400;
    color:rgba(255,255,255,1);
    line-height:38rpx;
}
._p{margin:0 auto; padding:5rpx 0} 

