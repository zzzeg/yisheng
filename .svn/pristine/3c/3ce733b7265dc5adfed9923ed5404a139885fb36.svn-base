<script>
	const { windowHeight,windowWidth } = uni.getSystemInfoSync();
	export default {
		onLoad(option) {
            console.log(option.code)
			this.code = option.code
			this.hospId = option.hospId
			this.getPorcudeInfo(option.code)
			this.gethealthKKhospitalyuyueDate(option.hospId)
		},
		data() {
			return {
				code: '',
				hospId: '',
				formData: {},
				showTabBar: false,
				tabs: ['套餐项目', '体检须知', '　　　　'],
				tactive: '套餐项目',
				scrollToIdis: '',
				keyueDate: [],
				loadingWidth: 10,
				showallDate: false,
				options: [{
					icon: 'headphones',
					color: '#B7B7B7'
				}],
				buttonGroup: [
					{
						text: '立即购买',
						background: 'linear-gradient(233deg,rgba(136,226,150,1) 0%,rgba(3,190,144,1) 100%)',
						boxShadow: '0px 3px 15px 0px rgba(3,190,144,0.3)',
						color: '#fff'
					}
				],
				type: '',
				info:{},
			}
		},
		methods: {
			getPorcudeInfo(code) {
				this.$api.findByKKPackage({
					data:{
					    code:code
					}
				}).then(res=>{
					this.formData = res.data
					this.formData.snapshot = JSON.parse(res.data.snapshot);
					this.info = {
						originalPrice: this.formData.originalPrice/100,
						price: this.formData.sealPrice/100,
						desc:this.formData.hospName,
						name:this.formData.packageName,
						icon:this.formData.snapshot.packageImage_0_thumb,
						id:this.formData.packageCode,
					    attributes:this.formData.snapshot,
						type:"KK",
						hospId:this.formData.hospId
					}
				})
			},
			tabChange(item) {
				this.tactive = item
				switch(item) {
					case '套餐项目':
					this.scrollToIdis = 'taocan'
					break
					case '体检须知':
					this.scrollToIdis = 'xuzhi'
					break
				}
			},
			scrolls(e) {
				// 滚动时触发，event.detail = {scrollLeft, scrollTop, scrollHeight, scrollWidth, deltaX, deltaY}
				// console.log(e.detail)
				this.showTabBar = e.detail.scrollTop > windowHeight
			},
			gethealthKKhospitalyuyueDate(id) {
				this.$api.healthKKhospitalyuyueDate({
					hospId: id,
					packageCode: this.code
				}).then(res=>{
					this.keyueDate = []
					res.data.map(item=>{
						this.keyueDate.push({
							month: item.date.split('-')[1],
							day: item.date.split('-')[2],
							canyue: item.maxNum - item.usedNum > 0,
							week: item.week
						})
					})
				})
			},
			inscorll(e) {
				// 滚动时触发，event.detail = {scrollLeft, scrollTop, scrollHeight, scrollWidth, deltaX, deltaY}
				console.log(e.detail)
				let length = this.keyueDate.length
				this.loadingWidth = (e.detail.scrollLeft + windowWidth - 32) / (56 * length) * 100
			},
			buttonClick(e){
				console.log('xxxxxxxxxxxxxxxxxxx')
				uni.navigateTo({
					url: `/pages/health-examination/orderToPay?id=${this.id}&hospId=${this.hospId}`
				})
				// return false
				// let data = this.info
				// this.cartList =[{
				// 	id:data.id ,
				// 	image: data.icon,
				// 	attr_val: data.desc,
				// 	stock: 99,
				// 	title: data.name,
				// 	price: data.price,
				// 	number: 1,
				// }];
				// uni.setStorage({
				// 	key: 'buylist',
				// 	data: this.cartList,
				// 	success: () => {
				// 		uni.navigateTo({
				// 			url: `/pages/health-examination/orderTopay?id=${this.id}&hospId=${this.hospId}`
				// 		})
				// 	}
				// })
			},
			onClick(e) {
				var data = {
				    expertId:this.communityId,
				    toId:this.communityId,
				    type:'product',
				    content:'',
				    communityId:this.communityId,
				    extJson:JSON.stringify(this.info)
				}
				this.$api.addCommunityMessage({
				     data: data
				}).then(addRes => {
				    console.log(addRes)
				    if(addRes.status == 'OK'){
				        uni.navigateTo({
				            url:"/pages/index/chatRoom?chatType=1&to=" + this.communityId +"&communityId="  + this.communityId
				        })
				    }
				})
			},
		},computed: {
			communityId() {
				return this.$store.getters.communityId 
			}
		},
		filters: {
			toFixed: function(value) {
				value = parseFloat(value)
				return value.toFixed(2);
			}
		}
	}
</script>

