</template>

<script>
	import api from '../../common/api.js';
	import uniLoadMore from "../../components/uni-load-more/uni-load-more.vue"
	export default{
	    components: {uniLoadMore},
		data() {
			return {
                ismore:false,
                contentText: {
                    contentdown: '查看更多',
                    contentrefresh: '加载中',
                    contentnomore: '没有更多',
                },
                page:1,
                size:10,
				showdialog: false,
				searchVal: '',
				searchVal1: '',
				slistCheck: [],
				slist: [],
				star: '',
				starts: [{num: '',label: '全部'},
                        {num: 5,label: '五星'},
                        {num: 4,label: '四星'},
                        {num: 3,label: '三星'}],
				addrCheck: [],
				addrList: ['深圳', '北京', '广州', '上海'],
				allOpen: false,
				moreOpen: false,
				serverList: [],
				cityList: [], // 城市列表
				cacheDataList: [] // 城市列表备份
			}
		},
        onLoad() {
        	this.getareasList() // 获取地区列表
        	this.getconmutype() // 获取服务站类型
        	this.getserverList() // 查询服务站
        },
        onPullDownRefresh() {
            console.log('onPullDownRefresh')
            this.page = 1
            this.getserverList()
            
        },
        onReachBottom() {
            console.log('onReachBottom')
            this.status = 'loading'
            uni.showNavigationBarLoading()
            
            this.page++
            this.getserverList()
        },
		computed: {
			scroll () {
				return !this.showdialog
			}
		},
		methods: {
            clikSearch:function(){
                this.page = 1
                this.getserverList()
            },
            clickServer:function(index){
                
                console.log(this.serverList[index])
                uni.reLaunch({
                    url:'../index/index?communityid='+this.serverList[index].id
                })
                
            },
			goSearchList(value) {
				// 模糊遍历城市列表
				let cacheList = []
				var reg = new RegExp(value,"g");
				this.cacheDataList.map(q=>{
					let z = {
						name: '',
						children: []
					}
					q.children.map(i=> {
						if(reg.test(i.name)) {
							z.name = q.name
							z.children.push(i)
						}
					})
					if (z.children.length > 0) {
						cacheList.push(z)
					}
				})
				this.cityList = cacheList
			},
			showall(value) {
				// 触发弹窗搜索城市对应的服务站
				this.showdialog = value
				if(value) {
					// 可选功能：关闭城市搜索框的时候，初始化查询的值
					// this.searchVal1 = ''
					// this.goSearchList(this.searchVal1)
					this.page = 1
					// 查询城市对应的服务站
					this.getserverList()
				}
			},
			getareasList() {
				// 查询城市列表
				api.getareasList().then(res=>{
					this.cityList = res.data
					this.cacheDataList = res.data
				})
			},
			getconmutype() {
				api.getcommunityType({
					page: 1,
					size: 999
				}).then(res=>{
					let n = []
					res.list.map(item=>{
						n.push(item.name)
					})
					this.slist = n
				})
			},
			checkstart(num) {
				this.star = this.star == num ? '' : num
                this.page = 1
				this.getserverList()
			},
			toggle(item) {
				this[item] = !this[item]
				console.log('item is xxx', this[item])
			},
			checkItem(pitem, item) {
				if(!item) {
					this[pitem] = []
				} else{
					if(this[pitem] == item) {
						this[pitem] = []
					} else {
						this[pitem] = []
						this[pitem].push(item)
					}
				}
				console.log(this.addrCheck.length)
                this.page = 1
				this.getserverList()
				this.showdialog = false
			},
			getserverList() {
				console.log('触发了搜索')
				// 获取服务站列表
				api.getcommuty({
					page: this.page,
					size:this.size,
					provinceName: '',
					cityName: this.addrCheck[0] ? this.addrCheck[0] : '',
					sort:'',
					keywords: this.searchVal, // 关键词
					tagName: this.slistCheck[0] ? this.slistCheck[0] : '', //服务站类型
					level: this.star  // 五四三二一星级
				}).then(res=>{
                    if(res.status == 'OK'){
                        if(this.page == 1){
                            this.serverList = []
                            if(res.list.length>=this.size){
                                this.ismore = true
                            }
                        }
                        res.list.map(item=>{
                        	var update = false;
                        	if(item.province){
                                if(item.province.length>2){
                                    item.addr = item.province.substring(0, 2)
                                    update = true
                                }else{
                                    item.addr = item.province
                                    update = true
                                }
                        	}
                        	if(item.city){
                        	    item.addr = item.addr  + ' | ' + item.city.substring(0,item.city.length - 1)
                        		update = true
                        	}
                            if(item.icon && JSON.parse(item.icon).length > 0){
                                item.icon = JSON.parse(item.icon)[0].url
                            }
                            
                        	if(!update){
                        		item.addr = ''
                        	}
                            if(item.score){
                                item.score = Math.round(item.score)
                            }
                            this.serverList.push(item);
                        })
                    }
					uni.stopPullDownRefresh();
					uni.hideNavigationBarLoading()
				})
			}
		}
	}
</script>

